<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="grade">
    <!-- 등급 조회 -->
    <select id="select_grade_all" resultType="user.vo.GradeVO">
        SELECT * FROM grade WHERE is_del = 0
    </select>

    <!-- 등급 번호로 조회 -->
    <select id="select_grade_by_id" resultType="user.vo.GradeVO" parameterType="String">
        SELECT * FROM grade WHERE is_del = 0 AND id = #{id}
    </select>
</mapper>