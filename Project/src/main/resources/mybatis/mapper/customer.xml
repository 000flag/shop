<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="customer">
  <!-- 회원가입 -->
   <insert id="signupInsert" parameterType="user.vo.CustomerVO">
      INSERT INTO `customer` (
      `cus_id`, `cus_pw`, `name`, `nickname`, `gender`, `birth_date`,
      `phone`, `email`, `weight`, `height`, `total`, `expire_date`, `is_del` )
      VALUES (
      #{cus_id}, #{cus_pw}, #{name}, #{nickname}, #{gender}, #{birth_date},
      #{phone}, #{email}, #{weight}, #{height}, #{total}, NOW(), #{is_del} )
    </insert>

  <!-- 로그인검증 -->
  <select id="loginSelect" parameterType="user.vo.CustomerVO" resultType="user.vo.CustomerVO">
    SELECT * FROM `customer`
    WHERE cus_id = #{cus_id} AND
    cus_pw = #{cus_pw}
  </select>
  <!-- customer테이블에서 id값 가져오기  -->
   <select id="getId" parameterType="String" resultType="int">
     SELECT id FROM customer
     WHERE nickname = #{nickname}
   </select>
<!--  <select id="getId2" parameterType="user.vo.BoardVOVO" resultType="user.vo.BoardVO">-->
<!--    SELECT * FROM board-->
<!--    WHERE cus_no = #{cus_id}-->


<!--  </select>-->


  <!-- 현재 로그인한 사용자 정보 조회 -->
  <select id="getUserProfile" parameterType="int" resultType="user.vo.CustomerVO">
    SELECT id, nickname, profile_image
    FROM customer
    WHERE id = #{cusId}
  </select>

  <!-- 랜덤 추천 사용자 5명 가져오기 (로그인한 사용자는 제외) -->
  <select id="getRandomUsers" parameterType="int" resultType="user.vo.CustomerVO">
    SELECT id, nickname, profile_image
    FROM customer
    WHERE id != #{excludeCusId}
    ORDER BY RAND()
    LIMIT 5
  </select>


</mapper>